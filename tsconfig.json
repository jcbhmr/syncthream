{
  "compilerOptions": {
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src", "test", "vite.config.ts"],
  "exclude": ["node_modules", "dist"],
  "tsdocOptions": {
    "entry": ["src/index.ts"]
  }
}
